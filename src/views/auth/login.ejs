<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="css/index.css">
    <link rel="stylesheet" href="css/login.css">
  </head>
  <body>
    <%- include('../partials/header') %>
    
      <main>
        <div class="login">
          <h1>
            INGRESAR A MI CUENTA
          </h1>

          <% if (typeof errors != 'undefined') { %>
            <ul>
              <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
              <% }) %>
            </ul>
            <% } %>
          <form action="/login" method="post">
         
            
              
              <div class="emailInput">
                <label for="email">Correo</label>
                <input
                type="email"
                id="email"
                name="email"
                placeholder="johndoe@correo.com"
                value="<%= typeof values != 'undefined' ? values.email : '' %>"
              />
               
              </div>
  
            
            <div class="email">
              
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" placeholder="● ● ● ● ● ● ● ● ● ●" />
              </div>
              
              <div class="emailInput">
                <div class="recordar">
                  <input class="submit" type="submit" value="Ingresar">
                  <input type="checkbox" class="check" name="recordar">
                  Recordarme
                </div>
                
                <hr>
              </div>
          
            <button type="submit">Enviar</button>
              <a href="register">
                <h5 class="cuotas">Olvidé mi contraseña</h5>
            </a>
         
            </form>
              </div>
      
      </main>
       
  
    <%- include('../partials/footer') %>
  </body>
</html>

